{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@types/*": ["./@types/*"],
      "@solid-xul/*": ["./src/solid-xul/*"]
    }
  },
  "exclude": ["dist/**"]
}
