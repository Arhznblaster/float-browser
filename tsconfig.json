{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsxImportSource": "solid-js",
    "paths": {
      "@types/*": ["./@types/*"],
      "@solid-xul/*": ["./src/solid-xul/*"],
      "@private/*": ["./src/private/src/content/*"],
      "@content/*": ["./src/content/*"]
    }
  },
  "exclude": ["dist/**"]
}
