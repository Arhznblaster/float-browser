{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  },
  "exclude": ["dist/**"]
}
