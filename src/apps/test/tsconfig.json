{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolvePackageJsonExports": false,
    "isolatedModules": true,
    "types": ["vite/client"],
    "resolveJsonModule": true
  },
  "exclude": ["_dist"]
}
